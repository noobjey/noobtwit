<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">

      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %> text-center" role="alert">
          <%= sanitize(message) %>
        </div>
      <% end %>

      <div class="col-lg-3"></div>
    </div>
  </div>
</div>
